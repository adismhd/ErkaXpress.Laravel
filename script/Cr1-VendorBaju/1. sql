-- BIKIN TABEL MENU
CREATE TABLE xmenus (
    id BIGINT NOT NULL AUTO_INCREMENT,
    Name VARCHAR(100),
    Description VARCHAR(100),
    Class VARCHAR(100),
    MenuOrder INT,
    Link VARCHAR(100),
    Icon VARCHAR(100),
    MenuModule VARCHAR(100),
    ParentId VARCHAR(100),
    IsActive BIT,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    updated_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    PRIMARY KEY (id)
);

